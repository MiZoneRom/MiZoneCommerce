@using MCS.Entities;
@using MCS.DTO;
@{
    List<NavigationBreadCrumbModel> BreadCrumb = ViewBag.BreadCrumb;
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@(BreadCrumb!=null? BreadCrumb.LastOrDefault().Name:"页面")</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    @foreach (var item in BreadCrumb)
                    {
                        <li class="breadcrumb-item"><a href="@item.Path">@item.Name</a></li>
                    }
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
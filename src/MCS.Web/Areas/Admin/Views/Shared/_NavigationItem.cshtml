@model List<MCS.DTO.NavigationModel>

@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <li class="nav-item">
            <a href="@(string.IsNullOrEmpty(item.Link)?"javascript:;":item.Link)" class="nav-link">
                <i class="nav-icon fas fa-tachometer-alt"></i>
                <p>
                    @item.Name
                    @if (item.Children.Count > 0)
                    {
                        <i class="right fas fa-angle-left"></i>
                    }
                </p>
            </a>
            @if (item.Children.Count > 0)
            {
                <ul class="nav nav-treeview">
                    <partial name="_NavigationItem" for="@item.Children" />
                </ul>
            }
        </li>
    }
}